@{
    @model DataBase_RH_BanderaBlanca.Models.Login
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Iniciar Sesión - Fundación Bandera Blanca</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

    <div class="container vh-100 d-flex align-items-center justify-content-center">
        <div class="row bg-white shadow rounded overflow-hidden" style="max-width: 700px; width: 100%;">
            <!-- Sección de la Imagen a la Izquierda -->
            <div class="col-md-5 d-flex align-items-center justify-content-center bg-light p-4">
                <img src="~/Assets/img/icons/icon-48x48.png" alt="Logo de la Empresa" class="img-fluid" style="max-width: 100%; max-height: 200px;">
            </div>

            <!-- Sección del Formulario a la Derecha -->
            <div class="col-md-7 p-4">
                <h3 class="text-center">Inicia Sesión en tu Cuenta</h3>
                <p class="text-center text-muted">Ingresa tu usuario y contraseña para continuar</p>

                @using (Html.BeginForm("ValidarCredenciales", "Login", FormMethod.Post, new { @class = "needs-validation", @novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label for="usuario" class="form-label">Usuario</label>
                        @Html.TextBoxFor(model => model.usuario, new { @class = "form-control", @id = "usuario", @required = "required", placeholder = "Ingresa tu usuario" })
                        <div class="invalid-feedback">Por favor ingresa tu usuario.</div>
                    </div>

                    <div class="mb-3">
                        <label for="clave" class="form-label">Contraseña</label>
                        @Html.PasswordFor(model => model.clave, new { @class = "form-control", @id = "clave", @required = "required", placeholder = "Ingresa tu contraseña" })
                        <div class="invalid-feedback">Por favor ingresa tu contraseña.</div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
                }
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
