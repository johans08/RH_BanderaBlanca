@model DataBase_RH_BanderaBlanca.Models.horas_extras

@{
    ViewBag.Title = "Editar Horas Extra";
    ViewBag.HorasList = new SelectList(Enumerable.Range(1, 5).Select(h => new { Value = h, Text = $"{h} hora(s)" }), "Value", "Text");
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Editar Horas Extra</h2>

    @using (Html.BeginForm("Edit", "horas_Extras", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="mb-4">
            <h4 class="text-muted">Detalles de Horas Extra</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            @Html.HiddenFor(model => model.Fecha_HoraExtra)
            @Html.HiddenFor(model => model.idEmpleado)
            @Html.HiddenFor(model => model.Cantidad_Horas)
            @Html.HiddenFor(model => model.Detalle_Hora_Extra)
            @Html.HiddenFor(model => model.Monto_HoraExtra)
            @Html.HiddenFor(model => model.HizoHoras)
            @Html.HiddenFor(model => model.idCatalogo_Horas_Extras)

            <div class="col-md-6 mb-3">
                @Html.LabelFor(model => model.Observacion, "Observación", htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Observacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Observacion, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(model => model.Aprobada, "Aprobada", htmlAttributes: new { @class = "form-label" })
                <div class="form-check">
                    @Html.EditorFor(model => model.Aprobada, new { htmlAttributes = new { @class = "form-check-input" } })
                    @Html.ValidationMessageFor(model => model.Aprobada, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

            <div class="d-flex justify-content-end">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ms-2" })
            </div>
        </div>
    }
</div>
