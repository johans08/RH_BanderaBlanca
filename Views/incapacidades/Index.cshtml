@model IEnumerable<DataBase_RH_BanderaBlanca.Models.incapacidades>

@{
    ViewBag.Title = "Gestión de Incapacidades";
}

<div class="row">
    <div class="col-12 col-lg-12 col-xxl-12 d-flex">
        <div class="card flex-fill">
            <div class="card-header">
                <h5 class="card-title mb-0">Incapacidades</h5>
            </div>

            <!-- Contenedor principal -->
            <div class="container mt-4 pb-5">

                <!-- Encabezado con botón para crear -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="mb-0">Lista de Incapacidades</h2>
                    <a href="@Url.Action("Create")" class="btn btn-success">Crear Nueva Incapacidad</a>
                </div>

                <!-- Tabla responsiva -->
                <div class="table-responsive">
                    <table class="table my-0 table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Cantidad_Dias)</th>
                                <th>@Html.DisplayNameFor(model => model.Monto_Deduccion)</th>
                                <th>@Html.DisplayNameFor(model => model.Detalle_Incapacidad)</th>
                                <th>@Html.DisplayNameFor(model => model.catalogo_incapacidades.Descripcion)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Cantidad_Dias)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Monto_Deduccion)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Detalle_Incapacidad)</td>
                                    <td>@Html.DisplayFor(modelItem => item.catalogo_incapacidades.Descripcion)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
