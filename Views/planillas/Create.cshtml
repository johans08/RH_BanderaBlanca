@model DataBase_RH_BanderaBlanca.Models.planillas

@{
    ViewBag.Title = "Registrar Planilla";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Registrar Planilla</h2>

    @using (Html.BeginForm("Create", "planillas", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="mb-4">
            <h4 class="text-muted">Detalles de la Planilla</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(model => model.Fecha_Planilla, "Fecha de la Planilla", htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Fecha_Planilla, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.Fecha_Planilla, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6 mb-3">
                    @Html.LabelFor(model => model.Comentario_Planilla, "Comentario", htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Comentario_Planilla, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Comentario_Planilla, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(model => model.idEmpleado, "Empleado", htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.idEmpleado, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.idEmpleado, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6 mb-3">
                    @Html.LabelFor(model => model.Identificador_Sucursal, "Sucursal", htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Identificador_Sucursal, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Identificador_Sucursal, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(model => model.idEstados_Solicitudes, "Estado de Solicitud", htmlAttributes: new { @class = "form-label" })
                    @Html.DropDownList("idEstados_Solicitudes", null, new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.idEstados_Solicitudes, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <input type="submit" value="Registrar" class="btn btn-primary" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ms-2" })
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
