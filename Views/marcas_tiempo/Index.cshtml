@model IEnumerable<DataBase_RH_BanderaBlanca.Models.marcas_tiempo>

@{
    ViewBag.Title = "Gestión de Marcas de Tiempo";
}

<div class="row">
    <div class="col-12 col-lg-12 col-xxl-12 d-flex">
        <div class="card flex-fill">
            <div class="card-header">
                <h5 class="card-title mb-0">Marcas de Tiempo</h5>
            </div>

            <!-- Contenedor principal -->
            <div class="container mt-4 pb-5">

                <!-- Encabezado con botón para crear -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="mb-0">Lista de Marcas de Tiempo</h2>
                    <a href="@Url.Action("Create")" class="btn btn-success">Crear Nueva Marca</a>
                </div>

                <!-- Tabla responsiva -->
                <div class="table-responsive">
                    <table class="table my-0 table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Marca_Hora)</th>
                                <th>@Html.DisplayNameFor(model => model.Tardia)</th>
                                <th>@Html.DisplayNameFor(model => model.Justificada)</th>
                                <th>@Html.DisplayNameFor(model => model.catalogo_movimientos.Descripcion_Movimientos)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Marca_Hora)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Tardia)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Justificada)</td>
                                    <td>@Html.DisplayFor(modelItem => item.catalogo_movimientos.Descripcion_Movimientos)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
